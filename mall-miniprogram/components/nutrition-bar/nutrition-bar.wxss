.nutrition-bar {
  width: 100%;
  margin-bottom: 10rpx;
}

.bar-container {
  height: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}

.bar-progress {
  height: 100%;
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.bar-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
}

.bar-label {
  font-weight: 500;
}

.bar-value {
  color: #333;
} 