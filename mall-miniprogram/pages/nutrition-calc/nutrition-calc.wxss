/* 营养目标计算页面样式 */
.container {
  padding: 20rpx;
}

.header {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.error-message {
  background-color: #fff2f0;
  border: 1rpx solid #ffccc7;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  color: #f5222d;
  font-size: 28rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.radio-group {
  display: flex;
  flex-direction: row;
}

.radio {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 28rpx;
}

.picker {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.button-container {
  margin-top: 40rpx;
}

.result-container {
  margin-bottom: 30rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-label {
  font-size: 28rpx;
  color: #666;
}

.result-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.highlight {
  background-color: #f6ffed;
  padding: 20rpx;
  border-radius: 8rpx;
  margin: 10rpx 0;
}

.highlight .result-label,
.highlight .result-value {
  color: #1aad19;
  font-weight: bold;
}

.result-tips {
  margin-top: 30rpx;
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.tips-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
} 